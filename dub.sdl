name "inochi2d"
description "A bring-your-own-renderer realtime 2D puppet library"
authors "Luna Nielsen"
copyright "Copyright Â© 2020, Inochi2D Project"
license "BSD 2-clause"

// Internally needed libraries.
dependency "imagefmt" version="~>2.1.0"
dependency "i2d-opengl" version="~>1.0.0"
dependency "inmath" version=">=1.3.0"

// Numem
dependency "nulib" version=">=0.2.7"
dependency "numem" version=">=1.3.2"
dependency "numem:hookset-libc" version="*"

versions "GL_32" "GL_ARB_gl_spirv" "GL_KHR_blend_equation_advanced" "GL_ARB_texture_filter_anisotropic"
stringImportPaths "shaders/"

// Base configuration.
configuration "lib" {
    targetType "library"
}

// Unit tests
configuration "unittest" {
    dependency "silly" version=">=1.1.1"
}

// Configuration which tags a version.
configuration "tag" {
    targetType "none"
    preGenerateCommands "dub run gitver -- --prefix IN --file source/inochi2d/ver.d --mod inochi2d.ver --appname Inochi2D"
}